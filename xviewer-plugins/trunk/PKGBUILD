# Maintainer: Chris Cromer <cromer@artixlinux.org>

pkgname=xviewer-plugins
pkgver=1.4.3
pkgrel=2
pkgdesc="Plugins for xviewer. X-Apps Project."
arch=('x86_64')
license=('GPL')
depends=('xviewer' 'libpeas' 'libchamplain' 'libgdata')
makedepends=('gnome-common' 'gobject-introspection' 'meson' 'samurai')
url='https://github.com/linuxmint/xviewer-plugins'

source=("${pkgname}-${pkgver}.tar.gz::https://github.com/linuxmint/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('376211810c3f77740ef3d38e73e1f7d6')

build() {
  artix-meson ${pkgname}-${pkgver} build \
    --libexecdir=lib/${pkgname} \
    --buildtype=plain
  samu -C build
}

package(){
  DESTDIR="${pkgdir}" samu -C build install
}
